#!/usr/bin/env bash
#install nginx on a web server

sudo apt-get purge -y nginx nginx-common nginx-full
apt-get update
apt-get install -y nginx
service nginx start

echo "events {
    worker_connections 1024;
}
http {
    server {
        listen 80;
        location = / {
            return 200 'Hello World!\\n';
        }
    }
}" > /etc/nginx/nginx.conf

nginx -s reload
