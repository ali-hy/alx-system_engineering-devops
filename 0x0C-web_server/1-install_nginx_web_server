#!/usr/bin/env bash
#install nginx on a web server

if [ "$#" -lt 1 ]; then
  echo "Usage: setup_nginx.sh PATH_TO_FILE"
  exit 1
fi

apt-get update

apt-get install -y nginx

service nginx start

echo "server {
    listen 80;
    location / {
        return 200 'Hello World!';
        add_header Content-Type text/plain;
    }
}" | tee /etc/nginx/sites-available/default

service nginx reload
