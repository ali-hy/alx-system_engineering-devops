#!/usr/bin/env bash
#update config to redirect on /redirect_me

apt-get update
apt-get install -y nginx
service nginx start

sudo bash -c 'echo "Hello World!" > /var/www/html/index.html'

sudo sed -i 's/}$/\nlocation \/redirect_me {\n    return 301 https:\/\/www.youtube.com\/watch?v=PKffm2uI4dk;\n}\n}/' /etc/nginx/sites-available/default

nginx -s reload
