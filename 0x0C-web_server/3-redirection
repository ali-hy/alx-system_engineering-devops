#!/usr/bin/env bash
#update config to redirect on /redirect_me

sudo apt-get purge -y nginx nginx-common nginx-full
apt-get update
apt-get install -y nginx
service nginx start

printf "events {
    worker_connections 1024;
}
http {
    server {
        listen 80;
        location = / {
            add_header Content-Type text/plain;
            return 200 'Hello World!\\n';
        }
    }
}" >/etc/nginx/nginx.conf

sed -i '/^listen 80;/a \        location /redirect_me {\n            return 301 https://youtu.be/PKffm2uI4dk?si=nj8e4kwkz4XGYpaZ;\n        }' /etc/nginx/nginx.conf

service nginx reload
